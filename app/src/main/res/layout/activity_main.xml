<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:text="start"
            android:layout_width="345dp"
            android:layout_height="123dp"
            android:id="@+id/jsonButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="340dp"
            android:layout_height="218dp"
            android:hint="fetched info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/jsonButton"
            android:id="@+id/fetchedJson"/>

    <TextView
            android:layout_width="339dp"
            android:layout_height="184dp"
            android:scrollbars="vertical"
            android:id="@+id/bluetoothInfo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:hint="bluetooth devices"/>

</android.support.constraint.ConstraintLayout>